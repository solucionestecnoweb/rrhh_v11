    <template id="report_purchasequotation_document_national">
    <t t-call="web.basic_layout" >
      <t t-foreach="o.with_context({'lang':o.partner_id.lang})" t-as="o">
        <div class="page">
            <div class="oe_structure"/>
                <div class="header">
                    <div  style="border-bottom: 2px solid black">
                        <table  cellspacing="0" cellpadding="0" border="0" style="width:100%; height:140px;">
                            <tr style="height:100%;">
                                <td style="width:17%;">
                                    <!--Cambio de tamaño logo-->
                                    <img t-att-src="'data:image/png;base64,%s' %(to_text(res_company.logo))" style="width:160px; height:auto; margin-top:38px; margin-bottom:0px;"/>
                                </td>
                                <td  style="width:43%;">
                                    <p><b><span t-field="o.company_id.street"/>, <span t-field="o.company_id.city"/> <span t-field="o.company_id.zip"/>. <span t-field="o.company_id.country_id.name"/>
                                    TF.: (0212) <span t-field="o.company_id.phone"/> / Fax.: (212) <span t-field="o.company_id.fax"/> / Email: <span t-field="o.company_id.email"/> / <span t-field="o.company_id.website"/></b></p>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>


            <table width="100%">
                <td class="text-left">
                             <tr>
                                <td><strong>PROVEEDOR: </strong> <span t-field="o.partner_id"/></td>
                             </tr>
                 </td>
                        <tr>
                             <td><strong>RIF: </strong> <span t-field="o.partner_id.vat"/></td>
                             <td class="text-right"><strong>SOLICITUD DE PRESUPUESTO </strong></td>
                        </tr>
                        <tr>
                             <td><strong>DIRECCIÓN: </strong> <span t-field="o.partner_id.street"/></td>
                             <td class="text-right"><span t-field="o.name"/></td>
                        </tr>
                 <td class="text-left">
                     <tr class="border-black">
                             <tr>
                                <td><strong>CONTACTO: </strong><span t-field="o.partner_id.child_ids.name"/> </td>
                             </tr>
                             <tr>
                                <td><strong>TELÉFONOS: </strong> <span t-field="o.partner_id.phone"/></td>
                             </tr>
                             <tr>
                                <td><strong>EMAIL: </strong> <span t-field="o.partner_id.email"/></td>
