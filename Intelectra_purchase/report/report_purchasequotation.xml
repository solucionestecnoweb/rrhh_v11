    <template id="report_purchasequotation_inherit" inherit_id="purchase.report_purchasequotation">
        <t t-call="web.html_container" position="replace">
                <t t-foreach="docs" t-as="o">
                     <t t-if="o['Type_of_provider'] == 'national'">
                            <t t-call="Intelectra_purchase.report_purchasequotation_document_national"/>
                     </t>
                     <t t-if="o['Type_of_provider'] == 'national_div'">
                            <t t-call="Intelectra_purchase.report_purchasequotation_document_national_div"/>
                     </t>
                     <t t-elif="o['Type_of_provider'] == 'international'">
                             <t t-call="Intelectra_purchase.report_purchasequotation_document_international"/>
                     </t>
            </t>
        </t>
    </template>


