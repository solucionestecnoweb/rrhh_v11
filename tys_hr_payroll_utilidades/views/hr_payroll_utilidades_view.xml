                        </group>
                        <group col="2">
                            <field name="total_util" string="Total a Pagar" readonly="1"/>
                            <field name="util_days_to_pay_ps" string="Total de Días a Pagar" readonly="1"/>
                            <!--field name="anticipos_util" string="Anticipos" readonly="1"/-->
                        </group>
                    </group>
                </xpath>
            </field>
        </record>



