         <record id="hr_payroll_utilidades_view" model="ir.ui.view">
            <field name="name">hr.payroll.utilidades.view</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
