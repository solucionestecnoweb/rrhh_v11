<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_contract_view_inherit" model="ir.ui.view">
            <field name="name">hr.contract.view.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_info']" position="after">
                                <group>
                                    <label for= "factor_banda" string="Factor de Banda Salarial"/>
                                    <div class="address_format">
                                        <field name="factor_banda" style="width: 35%%"/>
                                        <span>/ mes</span>
                                    </div>
                                </group>


                </xpath>
            </field>
        </record>
    </data>
</odoo>